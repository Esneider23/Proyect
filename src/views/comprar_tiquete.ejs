  <h1>Destino: <%=ruta.origen%></h1>
  <div class="container">
    <div class="izquierda">
      <img src="resources/img/Logo3.png" alt="" width="100%" height="auto">
      <h3>Cantidad de boletas:</h3>
      <input type="number" class="quantify" name="cantidad_boletas" id="cant_boletas" min="1" max="5" value="1">
    </div>
    <div class="derecha">
      <div class="sub_derecha">
        <div class="datos_tiquete_izquierda">
          <h4>Lugar de salida</h4>
          <p><%=ruta.origen%></p>
          <br>
          <h4>Lugar de llagada</h4>
          <p><%=ruta.destino%></p>
          <br>
          <h4>Información del bus:</h4>
          <p id="placa"><b>Placa:</b> RKS-324</p>
        </div>
        <div class="datos_tiquete_derecha">
          <h4>Fecha de salida</h4>
          <p>
            <%=ruta.fecha_salida%> - <%=ruta.hsalida%>
          </p>
          <br>
          <h4>Fecha de llegada</h4>
          <p>
            <%=ruta.fecha_llegada%> - <%=ruta.hllegada%>
          </p>
          <br>
          <h4>Valor unidad:</h4>
          <a id="precio">
            <h2> $ <%=ruta.precio%></h2>
          </a>
        </div>
      </div>
      
      <a href="/compra" style="text-decoration: none; color: black;">
      <div class="comprar_tiquete">
        <h4>Total: </h4>
          <h2></h2>
            <button type="submit">
              Comprar
            </button>
      </div>
    </div>
  </a>
